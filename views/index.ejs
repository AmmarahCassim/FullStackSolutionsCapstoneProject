<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <!-- <div class="modal-header text-center">
        <h1 style="font-family: birdHouse">ABOUT</h1>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div> -->

      <!-- Modal body -->
      <div class="modal-body">
        <iframe id="explanationvid" width="780" height="439" src="https://www.youtube.com/embed/AUniMh71nTs?list=UUONgj7SK0KxQo_U_Pr8Y8nQ&amp;ecver=1" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row" id="first_row">
    <div class="col-md-10 offset-md-1 timeline" id="addWave">
      <div id="addWave-timeline"></div>
      <div class="dragndrop">
        <div>
          <p>Drag and drop Wav file here</p>
          <p>or</p>
          <form id="uploadForm" enctype="multipart/form-data" action="/upload" method="POST">
            <div class="form-group" data-tooltipclass='forLastStep'>
              <label class="btn btn-info btn-file btnChoose">
                Choose Audio File <input id="file" data-toggle="tooltip" data-placement="top" title="Choose Audio File" type="file" name ="file" style="display: none;">
              </label>
              <input id="Submitter" type="submit" class="btn btn-info" value="Submit" disabled>


            </div>
            <div id="file-upload-filename"></div>
<!--//this is the new mic -->
            <div class="container">
              <div id="record"><h4>Microphone</h4></div>
              <input type="checkbox" id="btn" onclick="handleTheFunctions(this);"/>
              <label for="btn"></label>
              <div class="time">
                <div class="h_m"></div>
                <div class="s_ms"></div>
              </div>
            </div>

            <div id="formats" style="display: none">Format: start recording to see sample rate</div>
            <div id="recordings" ><h4 id="header" style="display: none">Microphone</h4>
              <ol id="recordingsList"><li style="display:none">replaceme</li></ol>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
  <div class="row" id="second_row" style="display:none;" >
    <div class="col-md-10 offset-md-1 edit">
      <button type="button" class="btn btn-primary" id="generate" data-step="1" data-intro="lets see what your sound file contains" data-tooltipclass='forLastStep'>SPEECH TO TEXT</button>
    </div>
    <div class="col-md-1 export speech disabledElement">
      <h2>EXPORT</h2>
    </div>
  </div>
</div>
<div id="about_popUp">
  <p>This is the about page</p>
</div>


</div>
